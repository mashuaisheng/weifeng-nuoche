/* pages/result/result.wxss */

/* 扫码结果状态框 */
.result_state {
  width: 650rpx;
  height: 300rpx;
  margin: 30rpx auto;
  border: 1rpx solid #dddddd;
  border-radius: 20rpx;
  -webkit-box-shadow: 10px 10px 5px #dddddd;
  box-shadow: 10px 10px 5px #dddddd;
  font-size: 34rpx;
}
.result_state .icon {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.result_state .icon .img{
  width: 150rpx;
  height: 150rpx;
}
.result_state .message {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.result_state .message .img {
  width: 46rpx;
  height: 46rpx;
  margin: 0 20rpx;
}

/* 操作按钮 */
.result_btns {
  width: 750rpx;
  position: fixed;
  bottom: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.result_btns .btn {
  width: 600rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
  color: #ffffff;
  font-size: 34rpx;
}
.result_btns .goBack_index {
  margin-bottom: 20rpx;
  background-color: #FF0000;
}
.result_btns .download_weifeng {
  background-color: #22A5F8;
  margin-bottom: 10rpx;
}
.message-number{
  margin-left: 20px;
  color: green;
}
.message-num{
  margin-left: 20px;
  color: red;
}
.btnes{
  background-color: #ffffff;
  font-size: 32rpx;
  margin-bottom: 5px;
}
.textes{
  margin: 25px;
  font-family: 'Courier New', Courier, monospace;
  font-size: 48rpx;
  letter-spacing:5px;
  line-height: 35px;
}
.imges{
  width: 95%;
  height: 400rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}